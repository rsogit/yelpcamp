<% layout('./layouts/boilerplate') %> 
<h1>Edit a Campground</h1>
<form action="/campgrounds/<%=campground._id%>?_method=PATCH" method="POST">
    <label for="title">Title</label>
    <input type="text" value="<%=campground.title%>" placeholder="Title" id="title" name="campground[title]">
    <label for="location">Location </label>
    <input type="text" value="<%=campground.location%>" placeholder="Location" id="location"
        name="campground[location]">
    <button>Send</button>
</form>
<div>
    <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
</div>
